if theaters
  div.screen-panel( role="tabpanel" id="around-0" aria-hidden='false' )
    ul.item-list
      each theater in theaters
        unless !theater.id
          li.theater-item
            a.item-title( href="/theaters/#{theater.id}" )
              != theater.name
              if theater.address
                br
                - var address = theater.address.split( ', ' );
                small #{address[0]}, #{address[1]}
if movies
  div.screen-panel( role="tabpanel" id="around-1" aria-hidden='true' )
    ul.item-list
      each movie in movies
        li.theater-item
          a.item-title( href="/movies/#{movie.id}" )!= movie.name
