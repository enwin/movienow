.screen
   height: 100vh
   overflow: hidden

.screen-header
   color: $light
   left: 0
   background-color: $dark
   position: fixed
   top: 0
   width: 100%
   z-index: 2

.screen-title
   empty();
   //font-size: rem( 14 )
   font-weight: bold
   height: rem( 48 )
   line-height: ( 47/16 )
   overflow: hidden
   padding-bottom: rem( 1 )
   padding-left: rem( 60 )
   padding-right: rem( 17 )
   text-overflow: ellipsis
   text-transform: uppercase
   white-space: nowrap

.screen-nav
   background-color: $dark
   border-bottom: 1px solid currentColer
   height: rem( 42 )
   padding: 0 rem( 7 )

   &.screen-form
      padding: rem( 1 ) rem( 3 ) rem( 3 )

   .nav-list
      display: flex
      justify-content: space-between
      height: 100%

   .nav-list-item
      flex-grow: 1
      //text-align: center
      height: 100%
      align-items: center

      a
         empty();
         display: block
         height: 100%
         line-height: ( 40/16 )
         text-decoration: none
         padding: 0 rem( 7 )

      &+ .nav-list-item
         a:before
            width: 70%

      &:last-child
         a:before
            width: 80%

.screen-content
   padding: rem( 48 ) rem( 14 ) 0
   height: 100vh
   overflow-y: scroll
   -webkit-overflow-scrolling: touch

.screen-section
   margin: rem( 20 ) 0 rem( 30 )

.screen-content-title
   color: $text-primary-dark
   font-size: rem( 22 )
   margin: rem( 20 ) 0 rem( 14 )
   position: relative
   text-align: center
   text-transform: uppercase

   &:before
      background-color: currentColor
      content: ''
      height: 2px
      left: 0
      position: absolute
      top: 50%
      transform: translateY( -50% )
      width: 100%

   span
      background-color: $light
      padding: 0 em( 6/16 )
      position: relative
      z-index: 1

.screen-list
   .screen-content
      padding-top: rem( 88 )

   .item-title
      padding: rem( 11 ) 0
      display: block
      color: $text-secondary-dark
