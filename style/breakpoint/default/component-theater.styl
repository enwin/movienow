.screen-theater
   .screen-content
      padding-top: rem( 102 )

.theater-movies-list
   padding-bottom: rem( 10 )

.theater-movies-item
   margin: rem( 24 ) 0

   &:first-child
      margin-top: rem( 12 )
      .dash
         display: none

.theater-movies
   &[aria-hidden=true]
      display: none

.theater-favorite
   position: absolute
   right: 0
   top: 0
   width: rem( 60 )
   height: rem( 54 )

   .button-favorite
      width: 100%
      height: 100%

   .button-favorited
      left: 0
      opacity: 0
      pointer-events: none
      position: absolute
      top: 0
      transform: scale( 0.5 )
      transition: transform 0.3s cubic-bezier(0,0,.57,2), opacity 0.15s linear
      z-index: 1

   &.favorited
      .button-favorited
         opacity: 1
         pointer-events: auto
         transform: scale( 1 )

.movie
   padding-top: rem( 22 )
   position: relative
   font-size: 0

.movie-artwork
   display: inline-block
   font-size: 1rem
   padding-right: pc( 18/320 )
   position: relative
   vertical-align: top
   width: pc( 84/320 )

   span
      display: block
      overflow: hidden
      padding-top: ( 4%/3*100 )
      background-color: $color-primary-light

   img
      display: block
      height: 100%
      position: absolute

   & + .movie-infos
      width: pc( 236/320 )

.movie-title
   font-size: rem( 18 )
   margin-top: rem( -2 )

.movie-infos
   display: inline-block
   font-size: 1rem
   vertical-align: top

.movie-infos-item
   font-size: rem( 12 )

.movie-times
   margin-top: rem( 10 )

.movie-times-info
   font-size: rem( 13 )
   margin: rem( 5 ) 0 0
   display: block

.movie-times-list
   color: $text-primary-dark
   font-size: 0
   margin-left: rem( -9 )
   width: 'calc( 100% + %s )' % ( rem( 18 ) )

.movie-times-item
   font-size: rem( 15 )
   display: inline-block
   padding: 0 rem( 9 )

   s
      position: relative
      color: $text-primary
      text-decoration: none

      &:after
         content: ''
         position: absolute
         width: 100%
         height: 1px
         background-color: $text-primary
         left: 0
         bottom: em( 6/14 )
