.input-floating
   position: relative
   display: block
   height: em( 48/16 )

   svg
      fill: $light
      position: absolute
      left: 0
      top: rem( 12 )


   label
      color: currentColor
      position: absolute
      left: 0
      top: 0
      width: 100%
      z-index: 0
      padding: 0 rem( 30 )
      line-height: ( 48/16 )

   input
      background: none
      border: 0
      display: block
      height: 100%
      outline: none
      padding: 0 rem( 8 ) 0 rem( 30 )
      position: relative
      width: 100%
      z-index: 1

      &:valid
         + label
            visibility: hidden
