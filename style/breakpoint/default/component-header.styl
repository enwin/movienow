.site-header
   position: absolute
   color: $light
   height: rem( 54 )
   width: 100%

   &.header-small
      .site-logo
         hide()

   .button-back
      display: none

   &.header-back
      .site-header-button
         display: none

      .button-back
         display: block


.site-logo
   height: rem( 62 )
   margin: 0 auto
   padding: rem( 15 ) 0
   position: relative
   width: rem( 70 )
   z-index: 1

   &.start
      position: fixed
      width: 100%
      height: rem( 116 )
      left: 0
      top: 50%
      transform: translateY( -50% )

      .big-wheel
         transform-origin: 186.9px 50.2px
         animation: spin 0.5s linear infinite

      .small-wheel
         transform-origin: 202.1px 170.3px
         animation: spin 0.4s linear infinite

   svg
      width: 100%
      height: 100%
      fill: $light



