.screen-home
   position: relative

   .screen-form
      height: rem( 36 )


   .screen-content
      background: none
      color: $light
      min-height: 0
      padding-top: 0
      position: fixed
      width: 100%
      bottom: 0
      left: 0
      height: auto
      z-index: 2

   .button-reverse
      padding: 0 1em

.home-poster
   display: block
   height: 100vh
   opacity: 0
   transition: opacity 0.3s $ease-out-quad;
   width: 100%
   will-change: opacity
   overflow: hidden
   position: relative

   img
      display: block
      height: 100%
      left: 50%
      object-fit: cover
      position: absolute
      top: 50%
      transform: translate( -50%, -50% )
      width: 100%

   a
      display: block
      height: 100%
      position: absolute
      width: 100%
      z-index: 1

   &.show
      opacity: 1

.home-find
   font-size: 0
   position: relative
   margin-bottom: rem( 25 )

   &:after
      content: ''
      position: absolute
      width: 1px
      background-color: $light
      height: rem( 26 )
      left: 50%
      top: rem( 15 )
      transform: translateX( -50% )

.find-item
   color: $light
   display: inline-block
   font-size: rem( 12 )
   margin: rem( 5 ) 0
   vertical-align: top
   width: 50%

.find-link
   line-height: ( 16/12 )
   padding: em( 15/12 ) em( 10/12 )
   display: block
   text-align: center
