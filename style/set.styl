font-face( "ticket", "/media/font/ticketing", normal );

@keyframes spin
   from
      transform: rotate( 0 )
   to
      transform: rotate( 180deg )

@keyframes spinTranslate
   from
      transform: rotate( 0 ) translate( -50%, -50% )
   to
      transform: rotate( 180deg ) translate( -50%, -50% )

a
   color: inherit
   text-decoration: none

button
   background: none
   border: 0
   padding: 0

body
   background: $color-secondary-dark url( '/media/dyn/city/paris.jpg' ) no-repeat 50% 50%
   background-size: cover
   color: $text-primary
   font-family: ticket, Courier, Georgia, Times, "Times New Roman", serif;
   font-size: 100%

.hidden
   hide();

.dash
   display: block
   height: rem( 2 )
   width: 100%

   pattern
      stroke: rgba( $color-primary-light, 0.4 )
      stroke-width: 2px
